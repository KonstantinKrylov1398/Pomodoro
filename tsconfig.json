{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "experimentalDecorators": true,
    "module": "commonjs",
    "typeRoots": ["types"],
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".git", "dist"]
}
